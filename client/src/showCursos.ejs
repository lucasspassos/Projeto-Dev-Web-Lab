<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
</head>
<body>

<h2>Cursos<h2>
    <table border="1">
        <thead>
            <tr>
                <td>Curso nome</td>
                <td>Curso sobrenome</td>
            </tr>
        </thead>
        <tbody>
        <% data.forEach(function(curso) { %>
            <tr>
                <td><%= curso.nome %></td>
                <td><%= curso.sobrenome %></td>
                <td><a href="/edit/<%= curso._id %>">Editar</a> - <a href="/delete/<%= curso._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
        </table>
        <button><a href="/">Novo</a></button>
</body>
</html>